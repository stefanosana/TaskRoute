@page "{id:int}"
@model TaskRoute.Pages.DeleteTaskModel
@{
    ViewData["Title"] = "Delete Task";
}

<div class="container">
    <h1>Delete Task</h1>

    <p>Are you sure you want to delete this task?</p>

    <div class="task-card">
        <h3>@Model.Task.Title</h3>
        <p>@Model.Task.Description</p>
        <div class="task-info">
            <span><i class="fas fa-calendar-alt"></i> @Model.Task.DueDate.ToShortDateString()</span>
            <span><i class="fas fa-map-marker-alt"></i> @Model.Task.Location?.Name</span>
        </div>
    </div>

    <form method="post">
        <input type="hidden" asp-for="Task.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./TaskList" class="btn btn-secondary">Cancel</a>
    </form>
</div>