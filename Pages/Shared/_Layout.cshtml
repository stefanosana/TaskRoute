<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - TaskRoute</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    @RenderSection("Styles", required: false)
</head>
<body class="d-flex flex-column min-vh-100">

    <header class="header bg-primary text-white py-3">
        <div class="container d-flex justify-content-between align-items-center">
            <div class="logo">
                <a class="navbar-brand text-white" asp-area="" asp-page="/Index">
                    <i class="fas fa-route me-2"></i> TaskRoute
                </a>
            </div>
            <nav class="menu">
                <ul class="nav d-flex gap-3">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-page="/TaskList">Task List</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-page="/AddTask">Add Task</a>
                    </li>
                    <partial name="_LoginPartial" />
                </ul>
            </nav>
        </div>
    </header>

    <main class="flex-fill container my-4">
        @RenderBody()
    </main>

    <footer class="text-center text-muted py-3 border-top mt-5">
        <small>© 2025 - TaskRoute - <a href="#" class="text-decoration-none">Privacy</a></small>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
